
<div ng-controller="controllerStyles as styleSettings">

    <div id="dvContentLeft" class="panel panel-info" style="text-align:left; display:{{styleSettings.visibleContentLeft?'block':'none'}}">
        <table>
            <tr>
                <th style="min-width: 130px; text-align:center;">Book</th>
                <th style="min-width: 100px; text-align:center;">Chapter</th>
                <th style="width: 100%; text-align:center;">Verse      [{{bible.currentTitle()}}] </th>
            </tr>
            <tr>
                <td style="vertical-align: top">
                    <div style="width:125px; height:600px; overflow-y:scroll;">
                        <table class="table biblebook-striped biblebook-hover table-bordered block">

                            <tr ng-repeat="book in bible.books" ng-click="bible.clickBook(book)">
                                <td ng-class="bible.currentBook.Name==book.Name?'biblebook-selected': ''">{{book.Name}}</td>
                            </tr>
                        </table>
                    </div>
                </td>

                <td style="vertical-align: top">
                    <div style="width: 95px; height:  600px; overflow-y: scroll;">
                        <table class="table biblebook-striped biblebook-hover table-bordered block">
                            <tr ng-repeat="chapter in bible.chapters" ng-click="bible.clickChapter(chapter)">
                                <td ng-class="bible.currentChapter==chapter?'biblebook-selected': ''"> {{chapter}} </td>
                            </tr>
                        </table>

                    </div>
                </td>

                <td style="vertical-align: top">
                    <table class="table table-striped table-hover block">
                        <tr ng-repeat="verse in bible.verses" ng-click="bible.clickVerse(verse)">
                            <td> {{verse.VerseNo}} </td>
                            <td style="width:100%"> {{verse.VerseText}} </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

    </div>

    <!-- ----------------------------------------------------- -->

    <div id="dvContentRight" class="panel panel-info" style="text-align:right; display:{{styleSettings.visibleContentLeft?'none' : 'block'}}">
        <table>
            <tr>
                <th style="width: 100%;  text-align:center;">الاعداد      [{{bible.currentTitle()}}] </th>
                <th style="min-width: 100px;  text-align:center;">الإصحاح</th>
                <th style="min-width: 130px;  text-align:center;">السفر</th>
            </tr>
            <tr>
                <td style="vertical-align: top">
                    <table class="table table-striped table-hover block">
                        <tr ng-repeat="verse in bible.verses" ng-click="bible.clickVerse(verse)">
                            <td style="width:100%"> {{verse.VerseText}} </td>
                            <td> {{verse.VerseNo}} </td>
                        </tr>
                    </table>
                </td>

                <td style="vertical-align: top">
                    <div style="width: 95px; height:  600px; overflow-y: scroll;">
                        <table class="table biblebook-striped biblebook-hover table-bordered block">
                            <tr ng-repeat="chapter in bible.chapters" ng-click="bible.clickChapter(chapter)">
                                <td ng-class="bible.currentChapter==chapter?'biblebook-selected': ''"> {{chapter}} </td>
                            </tr>
                        </table>

                    </div>
                </td>

                <td style="vertical-align: top">
                    <div style="width:125px; height:600px; overflow-y:scroll;">
                        <table class="table biblebook-striped biblebook-hover table-bordered block">

                            <tr ng-repeat="book in bible.books" ng-click="bible.clickBook(book)">
                                <td ng-class="bible.currentBook.Name==book.Name?'biblebook-selected': ''">{{book.Name}}</td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>

    </div>

</div>
