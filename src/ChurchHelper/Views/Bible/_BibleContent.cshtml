<div ng-controller="controllerBibleContents as bible">
    <div ng-controller="controllerStyles as ngSettings">
        <div id="dvContentLeft" class="panel panel-info" style="text-align:left; display:{{ngSettings.visibleContentLeft?'block':'none'}}">
            <table>
                <tr>
                    <th style="min-width: 130px; text-align:center;">Book</th>
                    <th style="min-width: 100px; text-align:center;">Chapter</th>
                    <th style="width: 100%; text-align:center;">  [{{bible.currentTitle()}}] </th>
                </tr>
                <tr>
                    <td style="vertical-align: top">
                        <div style="width:125px;" class="content-vertical-scroll">
                            <table class="table biblebook-striped biblebook-hover table-bordered block">

                                <tr ng-repeat="book in bible.books" ng-click="bible.clickBook(book)">
                                    <td ng-class="{'biblebook-selected' : (bible.current.book.Id==book.Id)}">{{book.Name}}</td>
                                </tr>
                            </table>
                        </div>
                    </td>

                    <td style="vertical-align: top">
                        <div style="width: 95px;" class="content-vertical-scroll">
                            <table class="table biblebook-striped biblebook-hover table-bordered block">
                                <tr ng-repeat="chapter in bible.chapters" ng-click="bible.clickChapter(chapter)">
                                    <td ng-class="{'biblebook-selected' : (bible.current.chapter==chapter)}">{{chapter}}</td>
                                </tr>
                            </table>

                        </div>
                    </td>

                    <td style="vertical-align: top">
                        <div class="content-vertical-scroll">

                            <table class="table table-striped table-hover block">
                                <tr ng-repeat="verse in bible.verses" ng-dblclick="bible.clickVerse(verse)">
                                    <td> {{verse.VerseNo}} </td>
                                    <td style="width: 100%"> {{verse.VerseText}} </td>
                                    <td style="vertical-align: middle;">
                                        <button class="btn glyphicon glyphicon-log-in" ng-click="bible.sendToService(verse.BibleId, verse.BookId , verse.ChapterId, verse.VerseNo , verse.VerseText)" data-toggle="tooltip" data-placement="bottom" title="add to service preparation"></button>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <button class="btn glyphicon glyphicon-unchecked" ng-click="bible.clickVerse(verse)"></button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>

        </div>

        <!-- ----------------------------------------------------- -->

        <div id="dvContentRight" class="panel panel-info" style="text-align:right; display:{{ngSettings.visibleContentLeft?'none' : 'block'}}">
            <table>
                <tr>
                    <th style="width: 100%;  text-align:center;"> [{{bible.currentTitle()}}] </th>
                    <th style="min-width: 100px;  text-align:center;">الإصحاح</th>
                    <th style="min-width: 130px;  text-align:center;">السفر</th>
                </tr>
                <tr>
                    <td style="vertical-align: top">
                        <div class="content-vertical-scroll">
                            <table class="table table-striped table-hover block">
                                <tr ng-repeat="verse in bible.verses" ng-dblclick="bible.clickVerse(verse)">
                                    <td style="vertical-align: middle;">
                                        <button class="btn glyphicon glyphicon-unchecked" ng-click="bible.clickVerse(verse)" data-placement="bottom" title="go to display"></button>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <button class="btn glyphicon glyphicon-log-in" ng-click="bible.sendToService(verse.BibleId, verse.BookId , verse.ChapterId, verse.VerseNo , verse.VerseText)" data-toggle="tooltip" data-placement="bottom" title="add to service preparation"></button>
                                    </td>
                                    <td style="width: 100%"> {{verse.VerseText}} </td>
                                    <td> {{verse.VerseNo}} </td>
                                </tr>
                            </table>                            
                        </div>
                    </td>

                    <td style="vertical-align: top">
                        <div style="width: 95px;" class="content-vertical-scroll">
                            <table class="table biblebook-striped biblebook-hover table-bordered block">
                                <tr ng-repeat="chapter in bible.chapters" ng-click="bible.clickChapter(chapter)">
                                    <td ng-class="{'biblebook-selected' : (bible.current.chapter==chapter)}">{{chapter}}</td>
                                </tr>
                            </table>

                        </div>
                    </td>

                    <td style="vertical-align: top">
                        <div style="width:125px;" class="content-vertical-scroll">
                            <table class="table biblebook-striped biblebook-hover table-bordered block">

                                <tr ng-repeat="book in bible.books" ng-click="bible.clickBook(book)">
                                    <td ng-class="{'biblebook-selected' : (bible.current.book.Id==book.Id)}">{{book.Name}}</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>

        </div>

    </div>  
</div>

